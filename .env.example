# bg-pdf-service Configuration
# Copy this file to .env and adjust values
# cp .env.example .env

# Port mapping (host:container = GOTENBERG_PORT:3000)
# Bind to 127.0.0.1 only â€” use a reverse proxy for external access
GOTENBERG_PORT=3001

# Basic Auth (required when --api-enable-basic-auth is set)
GOTENBERG_API_BASIC_AUTH_USERNAME=your-username
GOTENBERG_API_BASIC_AUTH_PASSWORD=your-secure-password

# Chromium Settings
CHROMIUM_RESTART_AFTER=50
CHROMIUM_AUTO_START=true

# Logging (error, warn, info, debug)
LOG_LEVEL=info

# API Settings
API_TIMEOUT=120s
